{
    "name": "my-php-app",
    "description": "A PHP application for managing installations and configurations.",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-mysqli": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Config\\": "src/Config/",
            "Views\\": "src/Views/"
        }
    },
    "scripts": {
        "install": "php scripts/install.php"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}